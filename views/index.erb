<h1>Welcome to the wonderful world of shoes!</h1>

<div id="stores_display">
  Here are the current stores in the database:
  <br>
  <% if @stores.any? %>
  <% @stores.each do |store| %>
    <div class="row">
      <div class="col-md-3">
        <h3><a href="/stores/<%= store.id %>"><%= store.name %></a></h3>
      </div>
      <div class="col-md-2">
        <form  action="/stores/<%= store.id %>/delete" method="post">
          <input type="hidden" name="_method" value="delete">
            <h3> <button type="submit" name="button" class="btn btn-danger btn-xs">Delete the store</button> </h3>
        </form>
      </div>
    </div>
    <% end %>

  <% else %>

    <p>there are no stores in the database. add one below!</p>
  </div>
  <% end %>

  <form id="add_store" action="/stores" method="post">
    <label for="store_name">Type in the name of the store</label>
    <input type="text" name="store_name">
    <button type="submit" name="button">add store</button>
  </form>

  </div>
</div>
